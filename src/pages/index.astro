---
import checkmarkIcon from '../assets/Checkmark.svg'
import HeroFigure from '../components/HeroFigure.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title='Hosterr - Challenge'>
  <main>
    <section>
      <div class='container'>
        <HeroFigure />
        <div class='content'>
          <h1>Host your website in less than 5 minutes.</h1>
          <p>
            With Hosterr, get your website up and running in no less than 5
            minutes with the most competitive pricing packages available online.
          </p>
          <form>
            <div>
              <label>
                <input type='text' placeholder='Enter e-mail address' />
              </label>
              <button type='submit'>Join Waitlist</button>
            </div>
            <p>
              <img src={checkmarkIcon} alt='Checkmark icon' />No spam, ever.
              Unsubscribe anytime.
            </p>
          </form>
        </div>
      </div>
    </section>
  </main>

  <style>
    section {
      margin-top: 3rem;
    }
    h1 {
      margin: 3rem 0 0 0;
      font-size: 3rem;
    }
    form div {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    form label {
      position: relative;
    }
    form input {
      width: 100%;
      background: #fff;
      border-radius: 0.25rem;
      color: inherit;
      padding: 1rem;
      border: none;
      font-size: 1rem;
    }
    form button {
      font-size: 1rem;
      padding: 1.125rem 1.5rem;
      border-radius: 0.25rem;
      display: block;
      color: white;
      background: #4977ea;
      border: none;
    }
    form button:hover {
      background: #5c83e6;
    }
    form p {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    form p img {
      width: 1.5rem;
      height: 1.5rem;
    }
    @media (min-width: 768px) {
      form div {
        flex-direction: row;
      }
    }
    @media (min-width: 1024px) {
      body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
        height: 100vh;
      }
      .container {
        display: flex;
        flex-direction: row-reverse;
        gap: 5rem;
      }
      .container > * {
        flex: 1;
      }
    }
  </style>
</Layout>
