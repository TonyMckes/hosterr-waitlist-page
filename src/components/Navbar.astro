---
import logo from '../assets/Logo.svg'
import Link from '../components/Link.astro'
import menuIcon from '../assets/Hamburger Menu.svg'
---

<header class='container'>
  <div class='logo'>
    <a href='/'><img src={logo} alt='Hosterr Logo' /></a>
    <a class='hiring' href='javascript:void(0);'>Hosterr is hiring!</a>
  </div>
  <button aria-label='Open menu'><img src={menuIcon} alt='Menu icon' /></button>
  <nav>
    <ul class='nav-links'>
      <li>
        <Link>Plans</Link>
      </li>
      <li>
        <Link>Find Domain</Link>
      </li>
      <li>
        <Link>Why Hosterr</Link>
      </li>
    </ul>
  </nav>

  <div class='auth'>
    <Link>Sign in</Link>
    <Link variant='secondary'>Join Waitlist</Link>
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem !important;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .logo .hiring {
    text-decoration: none;
    color: white;
    font-size: 0.825rem;
    padding: 0.25rem;
    border-radius: 1rem;
    background: linear-gradient(to right, #eab550, #ea5175);
  }
  button {
    padding: 0.5rem;
    background: transparent;
    border: 0;
    border-radius: 0.25rem;
    cursor: pointer;
  }
  button:hover {
    background: #0000000a;
  }
  nav {
    display: none;
  }
  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  .auth {
    display: none;
    align-items: center;
    gap: 2rem;
  }
  @media (min-width: 1024px) {
    header {
      padding-top: 2rem !important;
    }
    button {
      display: none;
    }
    nav {
      display: block;
    }
    .auth {
      display: flex;
    }
  }
</style>
